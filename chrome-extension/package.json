{
  "name": "nyx-chrome-extension",
  "version": "0.5.7",
  "description": "nyx chrome extension - core settings",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "clean:node_modules": "pnpm dlx rimraf node_modules",
    "clean:turbo": "rimraf .turbo",
    "clean": "pnpm clean:turbo && pnpm clean:node_modules",
    "ready": "tsc -b pre-build.tsconfig.json",
    "build": "vite build",
    "dev": "vite build --mode development",
    "test": "vitest run",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write --ignore-path ../.prettierignore",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@extension/env": "*",
    "@extension/shared": "*",
    "@extension/storage": "*",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "vite-plugin-node-polyfills": "^0.23.0",
    "webextension-polyfill": "^0.12.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@extension/dev-utils": "*",
    "@extension/hmr": "*",
    "@extension/tsconfig": "*",
    "@extension/vite-config": "*",
    "@laynezh/vite-plugin-lib-assets": "^2.1.0",
    "@types/chrome": "0.0.304",
    "@types/node": "^22.5.5",
    "magic-string": "^0.30.10",
    "ts-loader": "^9.5.1"
  }
}
